@using Microsoft.AspNetCore.Identity
@using StreamNight.Areas.Identity.Data
@inject SignInManager<StreamNightUser> SignInManager

<ul class="pure-menu-list">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="pure-menu-item">
            <a id="manage" class="pure-menu-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage User</a>
        </li>
        <li class="pure-menu-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="pure-button" style="margin:0 1rem;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="pure-menu-item">
            <a class="pure-menu-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="pure-menu-item">
            <a class="pure-menu-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>