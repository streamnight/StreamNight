<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StreamNight</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/pure/pure-min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css"
              asp-fallback-href="~/lib/pure/pure-min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="display:flex;height:100vh;">
    <header>
        <nav class="pure-menu">
            <a class="pure-menu-heading" href="~/Identity/">StreamNight</a>
            <partial name="_LoginPartial" />

            <partial name="_ManageNav" />
        </nav>
    </header>
    <div style="display:flex;flex-direction:column;width:100%;padding-left:1rem;">
        <main role="main" style="flex-grow:1;">
            <h1>Manage your account</h1>
            <h4>Change your account settings</h4>
            <hr />

            <div>
                @RenderBody()
            </div>
        </main>

        <footer>
            &copy; 2019 - StreamNight
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
