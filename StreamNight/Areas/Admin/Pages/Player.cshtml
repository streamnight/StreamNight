@page
@model StreamNight.Areas.Admin.Pages.PlayerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Player Options";
}

    <section>
        <link rel="stylesheet" href="~/css/admin/status.css">

        @if (ViewData["ResultMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <p>
                    <strong>@ViewData["ResultMessage"]</strong>
                </p>
            </div>
        }

        <h1>Player Options</h1>
        <p>This page lets you edit the default options for the stream player.</p>

        <em>Center is only recommended for ultrawide content.</em>

        <form asp-action="UpdatePlayer" id="playerForm" name="setPlayerOptions" method="post">
            <label for="PlayerOptions_Location">Player Location</label>
            <select asp-for="PlayerOptions.Location" asp-items="Html.GetEnumSelectList(typeof(StreamNight.SupportLibs.Discord.PlayerOptions.PlayerLocation))"></select>

            <button type="reset">Reset Form</button>
            <button type="submit">Update Options</button>
        </form>
    </section>